<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/send_box">

    <LinearLayout
        android:id="@+id/data_recv_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/data_received" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/recv_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/data_recv_box">

        <TextView
            android:id="@+id/data_received"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.25"
            android:gravity="center_horizontal"
            android:singleLine="true"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/data_check_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/recv_settings">

        <Button
            android:id="@+id/recv_clear"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:onClick="onClick"
            android:text="@string/clear"
            android:textAllCaps="false" />
    </LinearLayout>

</RelativeLayout>